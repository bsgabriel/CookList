<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/inputNomeReceita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Receita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsContainer" />

    <EditText
        android:id="@+id/inputDescricaoReceita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Descrição da Receita"
        android:inputType="textMultiLine"
        android:lines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNomeReceita" />

    <LinearLayout
        android:id="@+id/ingredientsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Os ingredientes serão adicionados dinamicamente aqui -->

    </LinearLayout>

    <Button
        android:id="@+id/btnSelecionarImgCadastroReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar Imagem"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/btnSalvarReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Receita"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="136dp" />

    <Button
        android:id="@+id/btnAdicionarIngredienteReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Ingrediente"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="416dp" />

    <ImageView
        android:id="@+id/imgViewCadastroReceita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
